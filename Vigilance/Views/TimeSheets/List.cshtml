@model Vigilance.ViewModels.TimeSheetsListViewModel 
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.UserName Time Sheets</h2>

<table id="timeSheets" class="table table-bordered table-hover">
    <thead>
    <tr>
            <th>Site Name</th>
            <th>Address</th>
            <th>Logged on</th>
            <th>Logged off</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@Html.Hidden("userId", @Model.UserId)

@section scripts{
    @Scripts.Render("~/Scripts/leaflet-basics.js");
    @Scripts.Render("~/Scripts/Moment.js");
    <script src="//cdn.datatables.net/plug-ins/1.10.13/dataRender/datetime.js"></script>

    <script>
        $(document).ready(function() {

            var table = $("#timeSheets").DataTable({
                ajax: {
                    url: "/api/userTimeSheets/" + $("#userId").val(),
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "siteName"
                    },
                    {
                        data: "siteAddress"
                    },
                    {
                        render: function(data, type, user) {
                            return moment(user.logOnTime).utcOffset(+10).format('MMMM Do YYYY, h:mm:ss a');
                        }
                    },
                    {
                        render: function(data, type, user) {
                            return moment(user.logOffTime).utcOffset(+10).format('MMMM Do YYYY, h:mm:ss a');
                        }
                    }
                ]
            });

        });
    </script>
}
