@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    @Html.Partial("_LeafletHeader")
}
<div id="overlay" class="waitingOverlay">
    <div class="waitingOverlay-content">
        <p>Please wait...</p>
    </div>
</div>

<h2 id="nearestSite" style="text-align: center">Loading worksites...</h2>
<div id="logbtns" style="text-align: center; padding-bottom: 10px">
    <input type="button" style="display: none; height: 100px; width: 50%;" value="Logon" id="logbtn" data-siteid="null" data-sheetid="null" />
</div>

<div id="mapid" style="display: block; margin: auto; height: 400px; width: 80%;"></div>
<div id="out" userlat="0" userlng="0"></div>


<table id="sites" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@Html.Hidden("selectedWorkSite", "")

@section scripts{
    @Scripts.Render("~/bundles/app");
    @Scripts.Render("~/bundles/workSites");
    <script>
        $(document).ready(function () {
            WorksitesIndexController.init();
        });
    </script>
}
